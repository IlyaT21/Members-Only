<div class="content-holder">
  <h1>Members Only App</h1>
  <nav>
    <% if (!user) { %>
    <a href="/login">Login</a>
    <a href="/register">Register</a>
    <% } else { %>
    <a href="/passcode">Enter a passcode</a>
    <a href="/add-message">Add a Message</a>
    <a href="/logout">Logout</a>
    <% } %>
  </nav>
  <div class="messages-holder">
    <% if (messages.length > 0) { %> <% messages.forEach(message => { %>
    <div class="message">
      <p>
        <strong
          ><%= message.User ? message.User.username : "Anonymous" %>:</strong
        >
        <%= message.content %>
      </p>
      <small>Posted on <%= message.createdAt.toLocaleDateString() %></small>
    </div>
    <% }) %> <% } else { %>
    <p>No messages yet. Be the first to post!</p>
    <% } %>
  </div>
</div>
